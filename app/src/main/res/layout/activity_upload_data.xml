<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="handlers"
            type="com.swadallail.nileapp.uploaddoc.UploadData.MyClick" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E8DFDF"
        tools:context=".uploaddoc.UploadData">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/top"
            android:layout_alignParentTop="true"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginStart="13dp"
                app:cardCornerRadius="8dp"
                android:layout_marginEnd="13dp"
                android:layout_marginTop="13dp"
                app:cardBackgroundColor="@color/colorWhite"
                >
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/ed_phone"
                        android:inputType="phone"
                        android:layout_width="match_parent"
                        android:drawablePadding="10dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:maxLength="11"
                        android:backgroundTint="@color/colorWhite"
                        android:layout_height="match_parent"
                        android:hint="@string/phone" />
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginStart="13dp"
                app:cardCornerRadius="8dp"
                android:layout_marginEnd="13dp"
                android:layout_marginTop="13dp"
                app:cardBackgroundColor="@color/colorWhite"
                >
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/ed_name"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:drawablePadding="10dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:backgroundTint="@color/colorWhite"
                        android:layout_height="match_parent"
                        android:hint="@string/fullName" />
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginStart="13dp"
                app:cardCornerRadius="8dp"
                android:layout_marginEnd="13dp"
                android:layout_marginTop="13dp"
                app:cardBackgroundColor="@color/colorWhite"
                >
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/ed_natid"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:drawablePadding="10dp"
                        android:paddingStart="10dp"
                        android:maxLength="14"
                        android:paddingEnd="10dp"
                        android:backgroundTint="@color/colorWhite"
                        android:layout_height="match_parent"
                        android:hint="@string/natId" />
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/top"
            android:id="@+id/lin_images"
            android:layout_marginTop="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_image_black_24dp"
                        android:id="@+id/img_idface"
                        android:onClick="@{handlers::natFace}"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="وجه البطاقة"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_image_black_24dp"
                        android:id="@+id/img_idback"
                        android:onClick="@{handlers::natBackground}"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ظهر البطاقة"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_image_black_24dp"
                        android:id="@+id/img_lic"
                        android:onClick="@{handlers::lic}"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="الرخصة"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_image_black_24dp"
                        android:id="@+id/img_profile"
                        android:onClick="@{handlers::profile}"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="الصورة الشخصية"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorBtn"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:layout_marginTop="13dp"
            android:text="@string/send"
            android:onClick="@{handlers::sendData}"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="13dp"
            android:textColor="@color/colorWhite"
            />
    </RelativeLayout>
</layout>