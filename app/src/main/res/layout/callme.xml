<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="3dp">


            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/imageView"
                android:src="@drawable/nileappcall"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                app:riv_corner_radius="0dip"
                app:riv_border_width="0dip"
                app:riv_border_color="#333333"
                android:visibility="visible"
                app:riv_mutate_background="true" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="@string/app_name"
                android:id="@+id/s1"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:padding="3dp"
                android:layout_marginLeft="30dp">

            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView1"
                android:src="@drawable/whatsapp"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                app:riv_corner_radius="0dip"
                app:riv_border_width="0dip"
                app:riv_border_color="#333333"
                android:visibility="visible"
                app:riv_mutate_background="true" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:textColor="@color/quantum_orangeA400"
                    android:text="+201150454254"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/t2"
                    android:layout_marginLeft="10dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_marginStart="30dp"
                android:padding="3dp"
                android:layout_marginLeft="30dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageView2"
                    android:src="@drawable/email"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    app:riv_corner_radius="0dip"
                    app:riv_border_width="0dip"
                    app:riv_border_color="#333333"
                    android:visibility="visible"
                    app:riv_mutate_background="true" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:textColor="@color/quantum_orangeA400"
                    android:text="info@nileapp.com"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/t3"
                    android:layout_marginLeft="10dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_marginStart="30dp"
                android:padding="3dp"
                android:layout_marginLeft="30dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageView3"
                    android:src="@drawable/facebookk"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    app:riv_corner_radius="0dip"
                    app:riv_border_width="0dip"
                    app:riv_border_color="#2F2FFF"
                    android:visibility="visible"
                    app:riv_mutate_background="true" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:textColor="@color/quantum_orangeA400"
                    android:text="Nile App"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/t4"
                    android:layout_marginLeft="10dp" />


            </LinearLayout>


        </LinearLayout>



    </LinearLayout>
</ScrollView>