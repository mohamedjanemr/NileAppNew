<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="handlers"
            type="com.swadallail.nileapp.loginauth.LoginAuthActivity.MyClick" />
    </data>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            tools:context=".loginauth.LoginAuthActivity"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/relCenter"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone"
                    android:id="@+id/pro_bar"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layoutDirection="rtl"
                    android:id="@+id/topRel"
                    android:layout_alignParentTop="true">
                    <ImageView
                        android:id="@+id/img_upload"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/nileapp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_below="@id/img_upload"
                        android:textColor="#000"
                        android:text="@string/txt_login"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="13dp"
                        android:layout_marginEnd="13dp"
                        android:visibility="gone"
                        android:background="@color/colorWhite"
                        android:elevation="10dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/topRel"
                    android:elevation="10dp"
                    android:id="@+id/relCenter"
                    android:background="@color/colorWhite"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/linAll"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/txt_or"
                            android:layout_marginTop="3dp"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="13dp"
                            android:layout_marginEnd="13dp"
                            >

                            <com.facebook.login.widget.LoginButton
                                android:layout_width="match_parent"
                                android:id="@+id/btn_faceLogin"
                                android:layout_height="fill_parent"
                                android:text="facebook"
                                android:layout_margin="2dp"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:onClick="facebooklogin"
                                />
                            <Button
                                android:id="@+id/sign_in_button"
                                android:layout_width="match_parent"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/btn_style"
                                android:text="GOOGLE"
                                android:layout_marginBottom="30dp"
                                android:textColor="#FA3434"
                                android:visibility="gone"
                                android:onClick="@{handlers::googlelogin}"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:background="@color/colorPrimaryDark"
                            android:layout_marginTop="25dp"
                            android:layout_marginStart="13dp"
                            android:layout_marginEnd="13dp"
                            android:layout_marginBottom="10dp"
                            />
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="53dp"
                            android:layout_marginStart="13dp"
                            app:cardCornerRadius="8dp"
                            android:layout_marginEnd="13dp"
                            android:layout_marginTop="13dp"
                            app:cardBackgroundColor="@color/colorWhite"
                            >
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <EditText
                                    android:inputType="textEmailAddress"
                                    android:layout_width="match_parent"
                                    android:drawablePadding="10dp"
                                    android:paddingStart="10dp"
                                    android:id="@+id/ed_emaillogin"
                                    android:paddingEnd="10dp"
                                    android:backgroundTint="@color/colorWhite"
                                    android:layout_height="match_parent"
                                    android:hint="@string/txt_email" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="53dp"
                            android:layout_marginStart="13dp"
                            android:layout_marginEnd="13dp"
                            app:cardCornerRadius="8dp"
                            android:layout_marginTop="10dp"
                            app:cardBackgroundColor="@color/colorWhite"
                            >
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                app:passwordToggleEnabled="true"
                                android:layout_height="match_parent">

                                <EditText
                                    android:inputType="textPassword"
                                    android:layout_width="match_parent"
                                    android:paddingStart="10dp"
                                    android:paddingEnd="10dp"
                                    android:drawablePadding="10dp"
                                    android:id="@+id/ed_passlogin"
                                    android:backgroundTint="@color/colorWhite"
                                    android:layout_height="match_parent"
                                    android:hint="@string/txt_password" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </androidx.cardview.widget.CardView>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/colorBtn"
                            android:layout_marginStart="13dp"
                            android:id="@+id/btn_login"
                            android:layout_marginEnd="13dp"
                            android:layout_marginTop="13dp"
                            android:onClick="@{handlers::loginfun}"
                            android:text="@string/txt_login"
                            android:textColor="@color/colorWhite"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginStart="13dp"
                            android:layout_marginEnd="13dp"
                            android:layout_marginTop="13dp"
                            android:weightSum="2"
                            >
                            <CheckBox
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:textColor="#000"
                                android:id="@+id/ch_rememberme"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_remember"/>
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:id="@+id/forget_pass"
                                android:onClick="@{handlers.forgetpassword}"
                                android:textColor="#000"
                                android:text="@string/txt_forgetpass"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:background="@color/colorPrimaryDark"
                            android:layout_marginTop="25dp"
                            android:layout_marginStart="13dp"
                            android:layout_marginEnd="13dp"
                            android:layout_marginBottom="10dp"
                            />
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="#DECBE2"
                            android:layout_marginStart="13dp"
                            android:layout_marginEnd="13dp"
                            android:id="@+id/btn_createnew"
                            android:layout_marginBottom="13dp"
                            android:onClick="@{handlers::gotoregister}"
                            android:text="@string/txt_newAcc"
                            android:textColor="@color/colorBtn"
                            />
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="#DECBE2"
                            android:layout_marginStart="13dp"
                            android:layout_marginEnd="13dp"
                            android:id="@+id/btn_phone"
                            android:layout_marginBottom="15dp"
                            android:onClick="@{handlers::phonelogin}"
                            android:text="التسجيل برقم الهاتف"
                            android:visibility="gone"
                            android:textColor="@color/colorBtn"
                            />

                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

</layout>