<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/n9"
            android:orientation="vertical"
            android:padding="3dp">


            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/imageView2"
                android:src="@drawable/ad"
                android:scaleType="fitXY"
                app:riv_corner_radius="0dip"
                app:riv_border_width="2dip"
                app:riv_border_color="#333333"
                android:visibility="visible"
                app:riv_mutate_background="true" />




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:gravity="right"
            android:layout_marginBottom="10dp"
            android:background="#FFFFFF">


            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/n9"
                    android:text="@string/phone"
                    android:id="@+id/s1"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:text="+249913577116"
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/t1"/>

                <View
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="@color/grey"
                    android:layout_marginTop="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/n9"
                    android:text="@string/whatsapp"
                    android:id="@+id/s2"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:text="+249921677742"
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/t2"/>

                <View
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="@color/grey"
                    android:layout_marginTop="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/n9"
                    android:visibility="gone"
                    android:text="@string/phone3"
                    android:id="@+id/s3"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:visibility="gone"
                    android:text="+249125629560"
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/t3"/>

                <View
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:background="@color/grey"
                    android:layout_marginTop="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#009688"
                    android:text="@string/email"
                    android:id="@+id/s4"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:text="info@waynaqar.com"
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/t4"/>

                <View
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="@color/grey"
                    android:layout_marginTop="15dp"/>

            </LinearLayout>



        </LinearLayout>
    </LinearLayout>
</ScrollView>