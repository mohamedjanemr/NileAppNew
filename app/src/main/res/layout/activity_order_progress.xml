<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="handlers"
            type="com.swadallail.nileapp.orderpro.OrderProgress.MyClick" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".orderpro.OrderProgress"
        android:background="#F6F3F3"
        >
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/ad"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:id="@+id/img_order"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="الطلب"
                        android:textSize="18sp"
                        android:layout_margin="8dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="right"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="نص الطلب"
                        android:textSize="18sp"
                        android:id="@+id/order_text"
                        android:layout_margin="8dp"
                        android:textColor="#0119A1"
                        android:textStyle="bold"
                        android:gravity="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorBtn"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layoutDirection="rtl"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="فى خلال"
                        android:textSize="18sp"
                        android:layout_margin="8dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2 ساعة"
                        android:textSize="18sp"
                        android:maxLines="2"
                        android:id="@+id/order_h"
                        android:layout_weight="1"
                        android:layout_margin="8dp"
                        android:textColor="#0119A1"
                        android:textStyle="bold"
                        android:gravity="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorBtn"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:orientation="horizontal"
                    android:id="@+id/lin"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:id="@+id/goo"
                    android:layout_marginTop="8dp"
                    android:layoutDirection="rtl"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="مكان الاستلام"
                            android:textSize="18sp"
                            android:layout_margin="8dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:gravity="center"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ذهاب"
                            android:textSize="18sp"
                            android:maxLines="2"
                            android:onClick="@{handlers::goFrom}"
                            android:id="@+id/order_from"
                            android:layout_margin="8dp"
                            android:textColor="#0119A1"
                            android:textStyle="bold"
                            android:gravity="center"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="مكان التسليم"
                            android:textSize="18sp"
                            android:layout_margin="8dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:gravity="center"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ذهاب"
                            android:textSize="18sp"
                            android:maxLines="2"
                            android:layout_margin="8dp"
                            android:onClick="@{handlers::goTo}"
                            android:id="@+id/order_to"
                            android:textColor="#0119A1"
                            android:textStyle="bold"
                            android:gravity="center"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorBtn"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layoutDirection="rtl"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="عنوان الاستلام"
                        android:textSize="18sp"
                        android:layout_margin="8dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_weight="1.5"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2 ش محمد فريد"
                        android:textSize="18sp"
                        android:maxLines="2"
                        android:layout_weight="0.5"
                        android:id="@+id/order_afrom"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:textColor="#0119A1"
                        android:textStyle="bold"
                        android:gravity="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorBtn"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layoutDirection="rtl"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="عنوان التسليم"
                        android:textSize="18sp"
                        android:layout_margin="8dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_weight="1.5"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="92 ش محمد محمود"
                        android:textSize="18sp"
                        android:maxLines="2"
                        android:layout_weight="0.5"
                        android:layout_gravity="center"
                        android:id="@+id/order_ato"
                        android:layout_margin="8dp"
                        android:textColor="#0119A1"
                        android:textStyle="bold"
                        android:gravity="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorBtn"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    />
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layoutDirection="rtl"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="العميل"
                    android:textSize="18sp"
                    android:layout_margin="8dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/nname"
                    android:layout_weight="1.5"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="احمد اشرف"
                    android:textSize="18sp"
                    android:maxLines="2"
                    android:layout_weight="0.5"
                    android:layout_margin="8dp"
                    android:textColor="#0119A1"
                    android:id="@+id/order_owner"
                    android:textStyle="bold"
                    android:gravity="center"
                    />
            </LinearLayout>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorBtn"
                    android:layout_marginStart="13dp"
                    android:id="@+id/btn_rec"
                    android:layout_marginEnd="13dp"
                    android:layout_marginTop="13dp"
                    android:text="تم الاستلام"
                    android:onClick="@{handlers::picked}"
                    android:textColor="@color/colorWhite"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorBtn"
                    android:layout_marginStart="13dp"
                    android:id="@+id/btn_done"
                    android:layout_marginEnd="13dp"
                    android:layout_marginTop="13dp"
                    android:text="تم التسليم"
                    android:onClick="@{handlers::sent}"
                    android:textColor="@color/colorWhite"
                    android:layout_marginBottom="15dp"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorBtn"
                    android:layout_marginStart="13dp"
                    android:id="@+id/btn_ratere"
                    android:layout_marginEnd="13dp"
                    android:layout_marginTop="3dp"
                    android:text="تقييم المندوب"
                    android:onClick="@{handlers::showrateRepre}"
                    android:textColor="@color/colorWhite"
                    android:visibility="gone"
                    android:layout_marginBottom="15dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_margin="8dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:id="@+id/phone_call"
                        >
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_phone_24"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:id="@+id/open_chat"
                        >
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_chat_24"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</layout>