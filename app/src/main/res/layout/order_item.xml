<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16sp"
    app:cardElevation="11dp"
    android:layoutDirection="rtl"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:visibility="visible"
            android:layout_marginTop="8dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="رقم الطلب"
                android:layout_weight="1"
                android:textAlignment="center"
                />

            <TextView
                android:id="@+id/txt_orderid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="50"
                android:layout_weight="0.5"
                android:textAlignment="center"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorBtn"
            android:layout_marginTop="3dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="اسم العميل:"
                android:layout_weight="0.8"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="احمد"
                android:maxLines="1"
                android:id="@+id/txt_name"
                android:layout_weight="0.8"
                />
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:numStars="5"
                android:id="@+id/rate"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="3.9"
                android:layout_weight="0.4"
                android:textAlignment="center"
                android:id="@+id/rate_num"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorBtn"
            android:layout_marginTop="3dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3"
            android:layout_marginTop="8dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="موقعك"
                android:layout_weight="0.5"
                android:textAlignment="center"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:background="@color/colorBtn"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="5 KM"
                android:textAlignment="center"
                android:layout_weight="0.3"
                android:id="@+id/loc_from"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:background="@color/colorBtn"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="الطلب"
                android:layout_weight="0.5"
                android:textAlignment="center"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:background="@color/colorBtn"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="5 KM"
                android:textAlignment="center"
                android:layout_weight="0.3"
                android:id="@+id/loc_to"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:background="@color/colorBtn"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="العميل"
                android:layout_weight="0.5"
                android:textAlignment="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorBtn"
            android:layout_marginTop="3dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="8dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="نص الطلب"
                android:layout_weight="0.8"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="الطلب"
                android:layout_weight="2.2"
                android:textAlignment="center"
                android:id="@+id/ordertext"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorBtn"
            android:layout_marginTop="3dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:gravity="center"
            android:layout_marginTop="8dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="التوصيل خلال"
                android:layout_weight="0.8"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/hours"
                android:layout_weight="0.3"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ساعة"
                android:layout_weight="0.8"
                android:textAlignment="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorBtn"
            android:layout_marginTop="3dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"

            android:layout_marginTop="8dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ادخل قيمة التوصيل"
                android:layout_weight="1"
                android:textAlignment="center"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="10"
                android:inputType="number"
                android:id="@+id/ed_price"
                android:maxLength="3"
                android:layout_weight="0.5"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="جنيه"
                android:layout_weight="0.5"
                android:textAlignment="center"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ارسال"
                android:id="@+id/send_offer"
                android:layout_gravity="center"
                android:layout_weight="0.8"
                />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>